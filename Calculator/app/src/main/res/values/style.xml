<resources>

    <style name="BtnBase">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">64dp</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/bg_button</item>
        <item name="android:layout_margin">6dp</item>
    </style>

    <style name="BtnNumber" parent="BtnBase">
        <item name="android:textColor">#1F2937</item>
    </style>

    <style name="BtnOperator" parent="BtnBase">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/bg_operator</item>
    </style>

    <style name="BtnEquals" parent="BtnBase">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/bg_equals</item>
    </style>

    <style name="BtnGray" parent="BtnBase">
        <item name="android:textColor">#374151</item>
        <item name="android:background">@drawable/bg_gray</item>
    </style>

    <style name="BtnDanger" parent="BtnBase">
        <item name="android:textColor">#DC2626</item>
        <item name="android:background">@drawable/bg_danger</item>
    </style>

</resources>
