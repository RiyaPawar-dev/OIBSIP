<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Gradient background -->
    <gradient
        android:startColor="#8B5CF6"
        android:endColor="#EC4899"
        android:angle="135"/>

    <!-- Rounded corners -->
    <corners android:radius="16dp"/>

    <!-- Optional subtle shadow border -->
    <stroke
        android:width="1dp"
        android:color="#7C3AED"/>

    <!-- Padding -->
    <padding
        android:left="12dp"
        android:top="12dp"
        android:right="12dp"
        android:bottom="12dp"/>

</shape>
